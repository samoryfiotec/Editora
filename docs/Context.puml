@startuml EditoraConsignadoContext
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

AddRelTag("sync", $textColor="black", $lineColor="black", $lineStyle="dashed")

Person(contas, "Contas a Receber", "Usuario que gerencia os boletos de consignação.")
System(PAP, "PAP", "Sistema da Editora no PAP gerencia consignados.")
System(SAP, "SAP", "SAP da Editora, consulta informações de consignação.")
System_Ext(servicoFinanceiro, "Serviço Financeiro", "Serviço externo financeiro gera o boleto.")

Rel(contas, PAP, "Gerencia Boleto")
Rel(PAP, servicoFinanceiro, "Gera Boleto", "HTTPS/JSON")
Rel(PAP, SAP, "Consulta Informações")

@enduml